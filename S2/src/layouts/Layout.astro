---
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="h-screen bg-gray-900 text-white flex flex-col">
		<nav class="bg-gray-800 border-b border-gray-700">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<div class="flex items-center justify-between h-16">
					<div class="flex items-center">
						<div class="flex-shrink-0">
							<span class="text-xl font-bold text-white">FH</span>
						</div>
						<div class="hidden md:block">
							<div class="ml-10 flex items-baseline space-x-4">
								<a href="/" class="text-white px-3 py-2 rounded-md text-sm font-medium">Inicio</a>
								<a href="/projects" class="text-gray-300 hover:text-white px-3 py-2 rounded-md text-sm font-medium">Proyectos</a>
								<a href="/about" class="text-gray-300 hover:text-white px-3 py-2 rounded-md text-sm font-medium">Sobre m√≠</a>
								<a href="/contact" class="text-gray-300 hover:text-white px-3 py-2 rounded-md text-sm font-medium">Contacto</a>
							</div>
						</div>
					</div>
					<div class="md:hidden">
						<button type="button" class="text-gray-400 hover:text-white hover:bg-gray-700 px-3 py-2 rounded-md text-sm font-medium">
							<svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
							</svg>
						</button>
					</div>
				</div>
			</div>
		</nav>
		<!-- ========================================== -->
		<slot />
	</body>
</html>